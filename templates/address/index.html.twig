{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>StreetNumber</th>
                <th>StreetName</th>
                <th>PostalCode</th>
                <th>City</th>
                <th>Additional1</th>
                <th>Additional2</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.streetName }}</td>
                <td>{{ address.postalCode }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.additional1 }}</td>
                <td>{{ address.additional2 }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}

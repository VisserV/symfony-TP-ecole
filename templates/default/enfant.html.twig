{% extends 'base.html.twig' %}

{% block title %}default index{% endblock %}

{% block stylesheets %}

    {{ parent() }}
    <link href="css/enfant.css" rel="stylesheet"/>
{% endblock %}

{% block body %}
    {% if news %}
        <div class="container-fluid actu">
            <div class="container">
                <h2>Actualités de l'école</h2>
            </div>
        </div>
        {% for single in news %}
            <div class="container-fluid main">
                <div class="container">
                    <div class="news">
                        <h3>{{ single.title }}</h3>
                        <div class="row">
                            <div class="col-4">
                                <img src="images/clusaz.jpg" alt="la clusaz" class="img-news">
                            </div>
                            <div class="col">
                                <p>{{ single.text }}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}

{% endblock %}
